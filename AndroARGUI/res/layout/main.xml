<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/vg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/tvAndroARTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:text="@string/AndroAR_Title"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bNavigateActivity"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:text="@string/navigation" />

        <Button
            android:id="@+id/bAddData"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/add_data" />

        <Button
            android:id="@+id/bCameraPreview"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/camera_preview" />

        <Button
            android:id="@+id/bCropImage"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:text="@string/crop_image" />
    </LinearLayout>

</ScrollView>